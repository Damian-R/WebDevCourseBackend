<% include ../partials/header %>
<% include ../partials/navbar %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Create a new campground</h1>
        <div style="width: 30%; margin: 35px auto">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="imageURL" placeholder="image url" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="desc" placeholder="description" required>
                </div>
                <div class="form-group">
                    <div class="input-group">
                      <span class="input-group-addon">$</span>
                      <input type="number" class="form-control" name="price" min="1" aria-label="Amount (to the nearest dollar)" placeholder="price" required>
                      <span class="input-group-addon">.00/night</span>
                    </div>
                </div>
                <div class="form-group">
                    <input class="btn btn-large btn-success btn-block" type="submit">
                </div>
            </form>
            <a class="btn btn-large btn-danger"href="/campgrounds">Go back</a>
        </div>
        
    </div>
</div>

<% include ../partials/footer %>
