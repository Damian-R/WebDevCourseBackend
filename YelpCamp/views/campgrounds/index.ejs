<% include ../partials/header %>
<% include ../partials/navbar %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp</h1>
            <p>View our campgrounds</p>
            <p><a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new campground</a></p>
        </div>
    </header>
    
    <div class="row text-center" style="display: flex; flex-wrap: wrap">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-lg-4 col-sm-6">
                <div class="thumbnail" href="/campgrounds/<%= campground._id %>">
                    <img src="<%= campground.image %>">
                    <div class="caption">
                        <h4><%= campground.name %></h4>
                    </div>
                    <p><a class="btn btn-info" href="/campgrounds/<%= campground._id %>">More Info</a></p>
                </div>
            </div>
        <% }); %>
    </div>
</div>



<% include ../partials/footer %>