<% include ../partials/header %>
<% include ../partials/navbar %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%=campground.name%></h1>
        <div style="width: 30%; margin: 35px auto">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="info[name]" placeholder="name" value="<%=campground.name%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="info[imageURL]" placeholder="image url" value="<%=campground.image%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="info[desc]" placeholder="description" value="<%=campground.desc%>">
                </div>
                <div class="form-group">
                    <div class="input-group">
                      <span class="input-group-addon">$</span>
                      <input type="number" class="form-control" name="info[price]" min="1" aria-label="Amount (to the nearest dollar)" value="<%= campground.price %>" required>
                      <span class="input-group-addon">.00/night</span>
                    </div>
                </div>
                <div class="form-group">
                    <input class="btn btn-large btn-success btn-block" type="submit">
                </div>
            </form>
            <a class="btn btn-large btn-danger"href="/campgrounds/<%=campground._id%>">Go back</a>
        </div>
        
    </div>
</div>

<% include ../partials/footer %>
